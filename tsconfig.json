{
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "ES2018"
    ],
    "module": "commonjs",
    "moduleResolution": "node10",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
  },
  "include": [
    "src/**/*"
  ]
}